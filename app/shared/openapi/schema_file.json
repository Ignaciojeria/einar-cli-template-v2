{
  "openapi": "3.0.0",
  "info": {
    "title": "Hello World API",
    "version": "1.0.0"
  },
  "paths": {
    "/hello": {
      "post": {
        "summary": "Accepts a \"Hello, World!\" message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ExampleRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully received the message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Message received: Hello, World!"
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ExampleRequest": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Hello, World!"
          }
        },
        "required": [
          "message"
        ]
      }
    }
  }
}